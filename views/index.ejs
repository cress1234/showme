<!DOCTYPE html>
<html>
    <head>
        <meta charset=utf-8>
        <meta http-equiv="X-UA-Compatible" content="IE-edge">
        <meta name="viewport" content="width-device-width, initial-scale=1">
        <title>ShowMe!</title>
        <!-- stylesheets -->
        <link rel="stylesheet" type="text/css" href="/style.css">
    </head>

    <body>
        <!-- Objects to draw -->
        <div id="outer">
            <h1> ShowMe! </h1>
            <div id="inner">
            <div id="top-section">
                <p> Select a random TV show by clicking the button below. </p>
                <div id="inputs">
                    <form action="/" method="post" id="addform">
                        <input name="show" id="output" onfocus="clearInput()">
                        <button type="submit" id="addshow" onclick="addShow()">
                            Add show
                        </button>
                    </form>
                    <button onclick="getShow()" id="getshow">Get show</button>
                </div>
                <div id="api-results">
                    <% if(details !== null){ %>
                    <p><%- details %></p>
                    <% } %>
                    <% if(error !== null){ %>
                    <p><%= error %></p>
                    <% } %>
                </div>
            </div>
        </div>
        <script src = "/main.js"></script>
    </body>
</html>
